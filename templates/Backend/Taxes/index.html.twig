{% extends 'Backend/base.html.twig' %}

{% block title %}BackendController
    Administration des taxes
    {{ parent() }}
{% endblock %}

{% block body %}
    <section class="container mt-5">
        <h1 class="text-center mb-4">Administration des taxes </h1>
        <a href="{{ path('app.admin.taxes.create') }}" class="mt-2 btn btn-primary">Cr√©er une taxe</a>
        <div class="row">
            {% for taxe in taxes %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ taxe.name }}</h5>
                            <p class="card-text">{{ taxe.enable ? 'Actif': 'Inactif'}}</p>
                          
                            <div class="d-flex justify-content-between">
                                <a href="{{ path('app.admin.taxes.update', { id: taxe.id }) }}" class="btn btn-primary">
                                    Modifier
                                </a>
                                {% include 'Backend/Taxes/_deleteForm.html.twig' %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}
