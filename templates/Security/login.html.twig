{% extends "base.html.twig" %}

{% block title %}
    Se connecter | {{ parent() }}
{% endblock %}

{% block body %}
    <div class="login-wrapper">
        <div class="login-container">
            <h1 class="title text-center">Connexion</h1>
            <p class="subtitle text-center">Entrez votre email et votre mot de passe pour continuer</p>
            <form action="{{ path('app.login') }}" method="post">
                {% if error %}
                    <div class="alert alert-danger" role="alert">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}
                <div class="form-group">
                    <label for="username" class="form-label">Email:</label>
                    <input type="text" id="username" name="_username" class="form-control" value="{{ lastUsername }}" placeholder="email@domain.com" required />
                </div>
                <div class="form-group">
                    <label for="password" class="form-label mt-2">Mot de passe:</label>
                    <input type="password" id="password" name="_password" class="form-control" placeholder="*****" required />
                </div>
                <div class="form-group mt-4 text-center">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <button type="submit" class="btn btn-primary btn-block">Se connecter</button>
                </div>
            </form>
            <p class="register-link text-center">Pas encore de compte? <a href="{{ path('app.register') }}">Cr√©ez en un</a></p>
        </div>
    </div>
{% endblock %}
